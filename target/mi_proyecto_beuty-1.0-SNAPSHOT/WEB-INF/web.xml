<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <!-- Configuración del contexto de Spring -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/spring-config.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Configuración del DispatcherServlet de Spring -->
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value></param-value> <!-- Puedes dejar esto vacío si no necesitas configuración adicional para el DispatcherServlet -->
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--Servlets -->
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.mycompany.mi_proyecto_beuty.servlets.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/usuario/registro</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.mycompany.mi_proyecto_beuty.servlets.LoginServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/usuario/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductoServlet</servlet-name>
        <servlet-class>com.mycompany.mi_proyecto_beuty.servlets.ProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductoServlet</servlet-name>
        <url-pattern>/producto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDeRecuperacionContraseña</servlet-name>
        <servlet-class>com.mycompany.mi_proyecto_beuty.servlets.ServletDeRecuperacionContraseña</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDeRecuperacionContraseña</servlet-name>
        <url-pattern>/recuperacionContraseña</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.mycompany.mi_proyecto_beuty.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!-- Páginas de error -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>
